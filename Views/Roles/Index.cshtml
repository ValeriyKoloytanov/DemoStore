@model User_and_roles

@{
    Layout = "_LayoutDashboard";
}
<h2 class="text-center">Список ролей</h2>
<div>
    <table class="table">
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="uk-button uk-button-default">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Create">Add role</a>
    <div>
        <h2 class="text-center">Список пользователей</h2>
        <table class="table">
            @foreach (var user in Model.users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Acess Rights</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
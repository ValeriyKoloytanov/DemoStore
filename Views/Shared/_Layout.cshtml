<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- UIkit CSS -->
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.10/dist/css/uikit.min.css"/>

  <title>Grocery Store</title>
</head>

<body>
  <div class="uk-offcanvas-content">
    <!--HEADER-->
    <header>
      <div class="uk-container">
        <nav class="uk-navbar-transparent" data-uk-navbar>
          <div class="uk-navbar-left">
            <a class="uk-navbar-item uk-logo" asp-area="" asp-controller="Home" asp-action="Index">
              <img src="~/img/logo.jpg" alt="logo">
            </a>
          </div>
          <div class="uk-navbar-center uk-visible@s">
            <ul class="uk-navbar-nav">
              <li>
                <a href="#">Products
                  <span data-uk-icon="icon: triangle-down"></span>
                </a>
                <div class="uk-navbar-dropdown">
                  <ul class="uk-nav uk-navbar-dropdown-nav">
                    <li>
                      <a asp-controller="Product" asp-action="List" asp-route-category="Fruits">Fruits</a>
                    </li>
                    <li>
                      <a asp-controller="Product" asp-action="List" asp-route-category="Vegetables">Vegetables</a>
                    </li>
                    <li>
                      <a asp-controller="Product" asp-action="List" asp-route-category="Drinks">Drinks</a>
                    </li>
                    <li>
                      <a asp-controller="Product" asp-action="List" asp-route-category="">All</a>
                    </li>
                  </ul>
                </div>
              </li>
              <li>
                <a asp-controller="Contact"
                   asp-action="Index"
                >Contact</a>
              </li>
              <li>
                @await Component.InvokeAsync("ShoppingCartSummary")
              </li>
              </ul>
          </div>


          <div class="uk-navbar-right">
               <a class="uk-button uk-button-default"asp-controller="Dashboard"asp-action="Index">Button</a>
            <ul class="uk-navbar-nav">
              <li>
                <a href="#" data-uk-icon="icon:user"></a>
                <div class="uk-navbar-dropdown uk-navbar-dropdown-bottom-left">
                  <ul class="uk-nav uk-navbar-dropdown-nav">
                    <li class="uk-nav-header uk-text-small uk-text-primary">YOUR ACCOUNT</li>
                    <partial name="_LoginPartial"/>
                  </ul>
                </div>
              </li>

              <li class="uk-hidden@s">
                <a class="uk-navbar-toggle" data-uk-toggle data-uk-navbar-toggle-icon href="#offcanvas-nav"></a>
              </li>

            </ul>
          </div>
        </nav>
      </div>
    </header>
    <!--/HEADER-->
<!-- <partial name="_CookieConsentPartial" /> -->

    @RenderBody()

<hr class="uk-divider-icon">
    <!--FOOTER-->
    <footer class="uk-section uk-section-muted uk-section-small uk-padding-small">
      <div class="uk-container">
        <p class="uk-text-small uk-text-center">Copyright 2018 - Grocery Store.</p>
      </div>
    </footer>
    <!--/FOOTER-->

    <!-- OFFCANVAS --->
    <!-- /OFFCANVAS -->


    <!-- UIkit JS -->
   <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.10/dist/js/uikit.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.10/dist/js/uikit-icons.min.js"></script></div>

    @RenderSection("scripts", required: false)
</body>
</html>

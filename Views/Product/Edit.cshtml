@model CommonViewModel

@{
    Layout = "_LayoutDashboard";
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/html">
<head>
    <title></title>
</head>
<body>
<div>
    @using (Html.BeginForm("Edit", "Product", "@Model.product.ProductId", FormMethod.Post))
    {
        <div class="form-group">
            <label class="uk-form-label" for="form-horizontal-text">Name</label>
            <div class="uk-form-controls">
                <input asp-for="product.Name" class="form-control form-control-sm" id="form-horizontal-text" type="text" placeholder="Some text...">
            </div>
        </div>

        <div class="form-group">
            <label class="uk-form-label" for="form-horizontal-text">Description</label>
            <div class="uk-form-controls">
                <input asp-for="product.Description" class="form-control form-control-sm" id="form-horizontal-text" type="text" placeholder="Some text...">
            </div>
        </div>
        <div class="form-group">
            <label class="uk-form-label" for="form-horizontal-text">Price</label>
            <div class="uk-form-controls">
                <input asp-for="product.Price" class="form-control form-control-sm" id="form-horizontal-text" type="text" placeholder="Some text...">
            </div>
        </div>
        <div class="form-group">
            <label class="uk-form-label" for="form-horizontal-text">Price</label>
            <div class="uk-form-controls">
                @for (int i = 0; i < Model.product.Properities.Count; i++)
                {
                    <input asp-for="product.Properities[i]" class="form-control form-control-sm" id="form-horizontal-text" type="text" placeholder="Some text...">

                    <button
                        asp-controller="Product" asp-action="delete_prop"
                        asp-route-id="@Model.product.ProductId"
                        asp-route-i="@i"

                        class="uk-button uk-button-primary  uk-width-1-2">
                        delete
                    </button>
                }
                <button
                    asp-controller="Product" asp-action="new_property"
                    asp-route-id="@Model.product.ProductId"
                    class="uk-button uk-button-primary  uk-width-1-2">
                    new
                </button>
            </div>
        </div>
        <div class="form-group">
            <div class="uk-form-controls">
                <input asp-for="product.ProductId" class="form-control form-control-sm" id="form-horizontal-text" type="hidden" placeholder="Some text..." value="@Model.product.ProductId">
            </div>
        </div>
        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
            <label class="uk-form-label" for="form-horizontal-text">is_featured</label>
            <input asp-for="product.IsFeatured"class="uk-checkbox" type="checkbox">
        </div>
        <div class="form-group">
            <Label class="uk-form-label" for="form-horizontal-text">Category</label>
            <select class="form-control" asp-for="product.CategoryId" asp-items="ViewBag.Categories as SelectList"></select>
        </div>
        <div class="custom-file">
            <input asp-for="product.Image" type="file" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>

        <button
            asp-controller="Product" asp-action="Edit"
            class="uk-button uk-button-primary  uk-width-1-2">
            Edit
        </button>
    }
</div>
</body>
</html>
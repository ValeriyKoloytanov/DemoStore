@model CommonViewModel

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Manage Content";

}

<!DOCTYPE html>

<html lang="ru">
<head>
    <title></title>
</head>
<body>
<div>
    <h3 class="text-center"> Обзор продуктов</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Изображение</th>
            <th>Название продукта</th>
            <th class="uk-text-right">Описание</th>
            <th class="uk-text-right">Цена</th>
            <th class="uk-text-right">Категория</th>
            <th>
                <a asp-controller="Product" asp-action="Create" class="btn btn-ghost-primary">Добавить продукт</a>
            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var line in Model.Products)
        {
            <tr>
                <td>
                    <img src="@Url.Content(line.ImageUrl)" alt="@line.Name" class="img-fluid img-thumbnail" height="800" width="600">
                </td>
                <td>@line.Name</td>
                <td class="uk-text-right">@line.Description</td>
                <td class="uk-text-right">@line.Price</td>
                <td class="uk-text-right">@line.Category.CategoryName</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@line.ProductId" class="btn btn-ghost-secondary">Редактировать</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@line.ProductId" class="btn btn-ghost-danger">Удалить</a>
                </td>
                <td>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        </tfoot>
        </table>
    
</div>
</body>
</html>